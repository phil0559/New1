<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_popup_child_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_room_content_card_default"
        android:clipToOutline="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_popup_child_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_room_content_banner"
            android:minHeight="48dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="14dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/text_container_popup_child_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_container_popup_child_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/text_dark"
            android:textSize="13sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
