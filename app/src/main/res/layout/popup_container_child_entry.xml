<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/container_popup_child_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/room_content_card_background"
        app:cardCornerRadius="@dimen/room_content_card_corner_radius"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:strokeWidth="0dp">

        <LinearLayout
            android:id="@+id/container_popup_child_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_room_content_card_default"
            android:clipToOutline="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_popup_child_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_room_content_banner_clickable"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:minHeight="56dp"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/image_container_popup_child_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_establishment_icon"
                    android:contentDescription="@null"
                    android:padding="8dp"
                    android:src="@drawable/ic_establishment_photos" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_container_popup_child_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image_container_popup_child_menu"
                    android:layout_width="@dimen/list_item_action_icon_size"
                    android:layout_height="@dimen/list_item_action_icon_size"
                    android:layout_marginStart="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:padding="4dp"
                    android:src="@drawable/ic_more_vertical"
                    android:tint="@color/icon_brown" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_container_popup_child_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_dark"
                android:textSize="13sp"
                android:visibility="gone" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
