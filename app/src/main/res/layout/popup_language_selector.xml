<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_language_popup"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/language_french"
        android:src="@drawable/ic_flag_france" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/language_english"
        android:src="@drawable/ic_flag_united_kingdom" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/language_german"
        android:src="@drawable/ic_flag_germany" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:contentDescription="@string/language_spanish"
        android:src="@drawable/ic_flag_spain" />
</LinearLayout>
