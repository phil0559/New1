<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_input_field_white"
    android:clipToOutline="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_room_content_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_room_content_banner"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/text_room_content_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_room_content_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/content_description_room_content_menu"
            android:src="@drawable/ic_more_vertical"
            android:tint="@color/icon_brown" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_room_content_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/text_room_content_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_room_content_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_dark"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
