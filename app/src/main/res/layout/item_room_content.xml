<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_input_field_white"
    android:clipToOutline="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_room_content_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_room_content_banner"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/image_room_content_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_establishment_icon"
            android:contentDescription="@null"
            android:padding="8dp"
            android:src="@drawable/ic_establishment_photos" />

        <TextView
            android:id="@+id/text_room_content_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_room_content_toggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:padding="4dp"
            android:src="@drawable/ic_chevron_down" />

        <ImageView
            android:id="@+id/image_room_content_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_description_room_content_delete"
            android:padding="4dp"
            android:src="@drawable/ic_delete_red" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_room_content_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/text_room_content_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_room_content_metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_dark"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
