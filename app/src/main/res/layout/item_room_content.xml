<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="false"
    app:strokeWidth="0dp">

    <LinearLayout
        android:id="@+id/container_room_content_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_room_content_card_default"
        android:clipToOutline="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_room_content_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_room_content_banner"
            android:minHeight="56dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="14dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/text_room_content_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/container_room_content_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_room_content_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_establishment_icon"
                    android:contentDescription="@null"
                    android:padding="8dp"
                    android:src="@drawable/ic_establishment_photos" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/image_room_content_add"
                    android:layout_width="@dimen/list_item_action_icon_size"
                    android:layout_height="@dimen/list_item_action_icon_size"
                    android:layout_marginStart="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:padding="4dp"
                    android:src="@drawable/ic_add"
                    android:tint="@color/icon_brown" />

                <ImageView
                    android:id="@+id/image_room_content_menu"
                    android:layout_width="@dimen/list_item_action_icon_size"
                    android:layout_height="@dimen/list_item_action_icon_size"
                    android:layout_marginStart="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:padding="4dp"
                    android:src="@drawable/ic_more_vertical"
                    android:tint="@color/icon_brown" />

                <ImageView
                    android:id="@+id/image_room_content_toggle"
                    android:layout_width="@dimen/list_item_action_icon_size"
                    android:layout_height="@dimen/list_item_action_icon_size"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:padding="4dp"
                    android:src="@drawable/ic_chevron_down"
                    android:tint="@color/icon_brown" />
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_room_content_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_room_content_filter_containers"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/room_content_filter_containers" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_room_content_filter_items"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/room_content_filter_items" />

            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <View
            android:id="@+id/view_room_container_filled_indicator"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/icon_brown"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/container_room_content_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingBottom="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_room_content_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_room_content_metadata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_dark"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
