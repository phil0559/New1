<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_dialog_container"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/text_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/dialog_add_establishment_title"
        android:textColor="@color/text_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_establishment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:hint="@string/dialog_label_establishment_name"
        android:inputType="textCapWords"
        android:padding="12dp"
        android:textColor="@color/text_dark"
        android:textColorHint="@color/icon_brown" />

    <EditText
        android:id="@+id/input_establishment_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:gravity="top|start"
        android:hint="@string/dialog_label_establishment_comment"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="3"
        android:minLines="2"
        android:padding="12dp"
        android:textColor="@color/text_dark"
        android:textColorHint="@color/icon_brown" />

    <TextView
        android:id="@+id/text_establishment_photos_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/dialog_label_establishment_photos_default"
        android:textColor="@color/text_dark"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button_add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:text="@string/dialog_action_add_photo"
        android:textAllCaps="false"
        android:textColor="@color/icon_brown"
        android:textSize="14sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/container_establishment_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" />
    </HorizontalScrollView>
</LinearLayout>
