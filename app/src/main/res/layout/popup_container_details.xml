<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_container_popup_mauve"
    android:clipToPadding="false"
    android:paddingStart="20dp"
    android:paddingTop="16dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_container_popup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/container_container_popup_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_container_popup_toggle"
                android:layout_width="@dimen/list_item_action_icon_size"
                android:layout_height="@dimen/list_item_action_icon_size"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/ic_chevron_down"
                android:tint="@color/icon_brown" />

            <ImageView
                android:id="@+id/icon_container_popup_menu"
                android:layout_width="@dimen/list_item_action_icon_size"
                android:layout_height="@dimen/list_item_action_icon_size"
                android:layout_marginStart="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/ic_more_vertical"
                android:tint="@color/icon_brown" />
        </LinearLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_container_popup_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:singleLine="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_container_popup_filter_containers"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="@string/room_content_filter_containers" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_container_popup_filter_items"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:checkable="true"
                android:text="@string/room_content_filter_items" />

        </com.google.android.material.chip.ChipGroup>

        <ImageView
            android:id="@+id/image_container_popup_group_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
