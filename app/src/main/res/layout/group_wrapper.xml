<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/groupWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/group_border"
    app:strokeWidth="2dp"
    app:cardBackgroundColor="@color/group_background_level1"
    app:contentPadding="6dp">

    <!-- Conteneur vertical pour le bandeau du groupe + ses éléments -->
    <LinearLayout
        android:id="@+id/groupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:dividerPadding="4dp"
        android:showDividers="none">

        <!-- Bandeau du contenant (ex : 43 Livres) -->
        <include layout="@layout/item_room_content_header" />

        <!-- Sous-groupes et éléments -->
        <LinearLayout
            android:id="@+id/groupChildrenContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:dividerPadding="3dp"
            android:showDividers="none" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
